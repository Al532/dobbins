name: Deploy GitHub Pages (prefer test)

on:
  push:                # dÃ©clenche sur toute branche
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build-and-deploy:
    # ne lance que pour main ou test
    if: contains(fromJson('["refs/heads/main","refs/heads/test"]'), github.ref)
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}

    steps:
      - name: Initial checkout (whatever branch triggered)
        uses: actions/checkout@v4

      - name: Pick branch to deploy
        id: pick
        run: |
          if git ls-remote --heads origin test | grep -q "refs/heads/test"; then
            echo "ref=test" >> $GITHUB_OUTPUT
          else
            echo "ref=main" >> $GITHUB_OUTPUT
          fi
          echo "Deploying ${{ steps.pick.outputs.ref }}"

      - name: Checkout target branch
        uses: actions/checkout@v4
        with:
          ref: ${{ steps.pick.outputs.ref }}

      # === Option A : site statique sans build ===
      # - uses: actions/upload-pages-artifact@v3
      #   with:
      #     path: .

      # === Option B : build Node (Vite/React, etc.) ===
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - run: npm ci
      - run: npm run build   # produit ./dist
      - uses: actions/upload-pages-artifact@v3
        with:
          path: ./dist       # mets "." si Option A

      - id: deployment
        uses: actions/deploy-pages@v4
